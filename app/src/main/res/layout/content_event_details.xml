<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tejas.spitaccess2.EventDetailsActivity"
    tools:showIn="@layout/activity_event_details">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/eventdetails_DescriptionCard"
           android:layout_margin="4dp"
           android:clickable="true"
           android:foreground="?android:selectableItemBackground"
           android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="20dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/eventdetails_DescriptionStatic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/eventdetails_DescriptionText"
                    android:text="desc text"/>

            </LinearLayout>

       </android.support.v7.widget.CardView>

       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/eventdetails_VenueCard"
           android:layout_margin="4dp"
           android:clickable="true"
           android:foreground="?android:selectableItemBackground"
           android:elevation="4dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Venue"
                   android:textSize="20dp"
                   android:layout_marginLeft="8dp"
                   android:layout_marginRight="8dp"
                   android:layout_marginTop="8dp"
                   android:layout_marginBottom="2dp"
                   android:id="@+id/eventdetails_VenueStatic"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="14dp"
                   android:layout_marginBottom="8dp"
                   android:layout_marginRight="4dp"
                   android:layout_marginLeft="8dp"
                   android:id="@+id/eventdetails_VenueText"
                   android:text="desc text"/>

           </LinearLayout>

       </android.support.v7.widget.CardView>

       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/eventdetails_PrizesCard"
           android:layout_margin="4dp"
           android:clickable="true"
           android:foreground="?android:selectableItemBackground"
           android:elevation="4dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Prizes"
                   android:textSize="20dp"
                   android:layout_marginLeft="8dp"
                   android:layout_marginRight="8dp"
                   android:layout_marginTop="8dp"
                   android:layout_marginBottom="2dp"
                   android:id="@+id/eventdetails_PrizesStatic"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="14dp"
                   android:layout_marginBottom="8dp"
                   android:layout_marginRight="4dp"
                   android:layout_marginLeft="8dp"
                   android:id="@+id/eventdetails_PrizesText"
                   android:text="desc text"/>

           </LinearLayout>

       </android.support.v7.widget.CardView>

       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/eventdetails_RegistrationCard"
           android:layout_margin="4dp"
           android:clickable="true"
           android:foreground="?android:selectableItemBackground"
           android:elevation="4dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Registration"
                   android:textSize="20dp"
                   android:layout_marginLeft="8dp"
                   android:layout_marginRight="8dp"
                   android:layout_marginTop="8dp"
                   android:layout_marginBottom="2dp"
                   android:id="@+id/eventdetails_RegistrationStatic"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="14dp"
                   android:layout_marginRight="4dp"
                   android:layout_marginLeft="8dp"
                   android:layout_marginBottom="4dp"
                   android:id="@+id/eventdetails_RegistrationText"
                   android:text="desc text"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/eventlinkunderlined"
                   android:textColor="#0000FF"
                   android:layout_marginRight="4dp"
                   android:layout_marginLeft="8dp"
                   android:layout_marginBottom="8dp"
                   android:id="@+id/eventdetails_RegistrationLink"
                   />

           </LinearLayout>

       </android.support.v7.widget.CardView>

       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/eventdetails_CommitteeCard"
           android:layout_margin="4dp"
           android:clickable="true"
           android:foreground="?android:selectableItemBackground"
           android:elevation="4dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Committee"
                   android:textSize="20dp"
                   android:layout_marginLeft="8dp"
                   android:layout_marginRight="8dp"
                   android:layout_marginTop="8dp"
                   android:layout_marginBottom="2dp"
                   android:id="@+id/eventdetails_CommitteeStatic"/>


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="14dp"
                   android:layout_marginBottom="8dp"
                   android:layout_marginRight="4dp"
                   android:layout_marginLeft="8dp"
                   android:id="@+id/eventdetails_CommitteeText"
                   android:text="desc text"/>

           </LinearLayout>

       </android.support.v7.widget.CardView>

       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/eventdetails_OrganizersCard"
           android:layout_margin="4dp"
           android:clickable="true"
           android:foreground="?android:selectableItemBackground"
           android:elevation="4dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Organizers"
                   android:textSize="20dp"
                   android:layout_marginLeft="8dp"
                   android:layout_marginRight="8dp"
                   android:layout_marginTop="8dp"
                   android:layout_marginBottom="2dp"
                   android:id="@+id/eventdetails_OrganizersStatic"/>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="14dp"
                   android:paddingTop="8dp"
                   android:layout_marginBottom="8dp"
                   android:layout_marginRight="4dp"
                   android:layout_marginLeft="8dp"
                   android:id="@+id/eventdetails_OrganizersText"
                   android:text="desc text"/>

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingRight="16dp"
                       android:paddingLeft="16dp"
                       android:paddingTop="8dp"
                       android:paddingBottom="8dp"
                       android:src="@drawable/ic_phone_black_24dp"
                       android:id="@+id/eventdetails_OrganizersCall"
                       android:layout_alignParentRight="true"/>

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingRight="16dp"
                       android:paddingLeft="16dp"
                       android:paddingTop="8dp"
                       android:paddingBottom="8dp"
                       android:id="@+id/eventdetails_OrganizersContact"
                       android:src="@drawable/ic_person_add_black_24dp"
                       android:layout_toLeftOf="@+id/eventdetails_OrganizersCall"/>
               </RelativeLayout>

           </LinearLayout>

       </android.support.v7.widget.CardView>

       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/eventdetails_WinnersCard"
           android:layout_margin="4dp"
           android:clickable="true"
           android:foreground="?android:selectableItemBackground"
           android:elevation="4dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Winners"
                   android:textSize="20dp"
                   android:layout_marginLeft="8dp"
                   android:layout_marginRight="8dp"
                   android:layout_marginTop="8dp"
                   android:layout_marginBottom="2dp"
                   android:id="@+id/eventdetails_WinnersStatic"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="14dp"
                   android:layout_marginBottom="8dp"
                   android:layout_marginRight="4dp"
                   android:layout_marginLeft="8dp"
                   android:id="@+id/eventdetails_WinnersText"
                   android:text="desc text"/>

           </LinearLayout>

       </android.support.v7.widget.CardView>

   </LinearLayout>

</android.support.v4.widget.NestedScrollView>
