<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tejas.spitaccess2.fragments.HomeFragment_Tab3">

    <!-- TODO: Update blank fragment layout -->
   <android.support.v7.widget.CardView
       android:layout_margin="8dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:padding="8dp">


           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/spitlogo"
               android:layout_gravity="center_horizontal"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Bharatiya Vidya Bhavans"
               android:layout_marginTop="4dp"
               android:textSize="16dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Sardar Patel Institute of Technology"
               android:textSize="20dp"
               android:layout_marginBottom="4dp"
               android:textColor="@color/colorPrimaryDark"/>

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/colorPrimary"/>

           <TextView
               android:layout_marginTop="4dp"
               android:textSize="14dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Bharatiya Vidya Bhavans Sardar Patel Institute of Technology Munshi Nagar, Andheri (West), Mumbai 400 058"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_marginTop="8dp"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="170dp"
                   android:paddingLeft="60dp"
                   android:paddingTop="8dp"
                   android:paddingBottom="8dp"
                   android:textColor="@color/colorPrimary"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:id="@+id/HomeFragment_Tab3Website"
                   android:clickable="true"
                   android:foreground="?android:selectableItemBackground"
                   android:text="WEBSITE"/>

               <TextView
                   android:layout_width="170dp"
                   android:paddingLeft="70dp"
                   android:paddingTop="8dp"
                   android:paddingBottom="8dp"
                   android:textColor="@color/colorPrimary"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:clickable="true"
                   android:id="@+id/HomeFragment_Tab3Map"
                   android:foreground="?android:selectableItemBackground"
                   android:text="MAP"/>

           </LinearLayout>

       </LinearLayout>
   </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Details"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:textSize="16dp"
                    android:text="022-26707440"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_phone_black_24dp"
                    android:id="@+id/HomeFragment_Tab3CallImage1"
                    android:layout_alignParentRight="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@+id/HomeFragment_Tab3CallImage1"
                    android:src="@drawable/ic_person_add_black_24dp"
                    android:id="@+id/HomeFragment_Tab3AddContactImage1"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:textSize="16dp"
                    android:text="022-26287250"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_phone_black_24dp"
                    android:id="@+id/HomeFragment_Tab3CallImage2"
                    android:layout_alignParentRight="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@+id/HomeFragment_Tab3CallImage2"
                    android:src="@drawable/ic_person_add_black_24dp"
                    android:id="@+id/HomeFragment_Tab3AddContactImage2"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Email:"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="principal@spit.ac.in"
                    android:textSize="16dp"
                    android:id="@+id/HomeFragment_Tab3Email"
                    android:layout_marginLeft="60dp"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
