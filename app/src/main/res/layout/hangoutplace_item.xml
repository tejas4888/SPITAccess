<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
            android:id="@+id/hangoutitem_image"
        android:src="@drawable/morning"
        android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hangoutitem_title"
                android:padding="8dp"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Title"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone_black_24dp"
                android:id="@+id/hangoutitem_call"
                android:padding="8dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:id="@+id/hangoutitem_addtocontact"
                android:src="@drawable/ic_person_add_black_24dp"
                android:layout_toLeftOf="@id/hangoutitem_call"/>

        </RelativeLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_marginLeft="8dp"
                android:paddingBottom="4dp"
                android:id="@+id/hangoutitem_address"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MENU"
                android:textColor="@color/colorPrimary"
                android:id="@+id/hangoutitem_menu"
                android:paddingLeft="80dp"
                android:paddingRight="70dp"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                />

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="MAP"
                android:id="@+id/hangoutitem_map"
                android:paddingLeft="60dp"
                android:paddingRight="0dp"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:clickable="true"
                android:textColor="@color/colorPrimary"
                android:foreground="?android:selectableItemBackground"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>